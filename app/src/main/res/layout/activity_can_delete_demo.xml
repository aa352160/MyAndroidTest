<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_can_delete_demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pcdalao.mytest.finished.CanDeleteDemoActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        />

    <com.example.pcdalao.mytest.finished.TaskFeedbackRadioView
        android:id="@+id/task_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.pcdalao.mytest.finished.TaskFeedbackRadioView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/selector_item_select"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <com.example.pcdalao.mytest.finished.RelativeLayoutWithDottedLine
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:background="@color/white"/>
    </com.example.pcdalao.mytest.finished.RelativeLayoutWithDottedLine>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_select_clicked"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.Does customer cooperate in work?"
                android:textColor="#333333"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/textView8"
                android:text="*"
                android:textSize="30sp"
                android:textColor="#FE7327"
                />

            <ImageView
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_photo_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="left"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_photo_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:gravity="top"
            android:layout_below="@+id/linearLayout"
            android:textSize="12sp"
            android:hint="Please remark here"
            android:textColorHint="#e7e7e7"
            />

    </RelativeLayout>

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"/>

</LinearLayout>
